{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "strict": true,
    "outDir": "./build",
    "lib": [
      "es2021",
      "dom"
    ]
  },
  "exclude": [
    "node_modules",
    "test",
    "**/*.test.ts"
  ]
}
